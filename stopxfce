#!/bin/bash

# Kill ONLY the XFCE session inside Xephyr
pkill -x xfce4-session
pkill -x xfwm4
pkill -x xfsettingsd
pkill -x xfce4-panel
pkill -x xfdesktop
pkill -x Thunar

# Kill ONLY Xephyr (avoid matching sommelier)
pkill -x Xephyr

# Clean up stale locks for DISPLAY :2
rm -f /tmp/.X2-lock
rm -f /tmp/.X11-unix/X2

sleep 0.2
